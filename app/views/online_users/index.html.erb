<div class='btn-group'>
  <button class="btn btn-secondary", id='delete_selected_users'><i class="fa fa-trash"></i> Delete</button>
  <button class="btn btn-secondary", id='ban_selected_users'><i class="fa fa-lock"></i> Block</button>
  <button class="btn btn-secondary", id='unlock_selected_users'><i class="fa fa-unlock"></i> Unlock</button>
</div>
<button class="btn btn-secondary", id='admin_selected_users'><i class="fas fa-user-lock"></i> Set as admin!</button>

<table>
  <tr id="bg">
	<th><%= check_box_tag 'checkall' %></th>
	<th>Id</th>
  <th>Email</th>
  <th>Last sign in</th>
	<th>Created ad</th>
	<th>Status</th>
  <th>Prifile</th>
  </tr>
 <% @users.each do |u| %>
  <tr>
	<th><%= check_box_tag u.id, false, false, class: 'user-checkbox' %></th>
	<th><%= u.id %></th>
  <th><%= u.email %></th>
  <th><%= u.current_sign_in_at %></th>
	<th><%= u.created_at %></th>
	<th><% if u.online? %>
		<span class="badge badge-pill badge-success">Online</span>
		<% else %>
		<span class="badge badge-pill badge-danger">Offline</span>
		<% end %>
  </th>
  <th><%= link_to "visit", user_collections_path(u), class: 'button' %></th>
  <% end %>
</table>


