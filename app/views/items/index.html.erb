<div class="container">
<header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
        <% if @collection.user_id != current_user.id %>
        <% else%>
        <span><%= link_to 'new item', new_collection_item_path, class: 'col-4 pt-1 text-muted' %></span>
        <% end %>
        </div>
        <div class="col-4 text-center">
        <h2><a class="blog-header-logo text-dark" href="/items">Items</a></h2>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
        <a class="text-muted" href="#">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-3"><circle cx="10.5" cy="10.5" r="7.5"></circle><line x1="21" y1="21" x2="15.8" y2="15.8"></line></svg>
        </a>
        </div>
    </div>
</header>
</div>
<div class="album py-5">
    <div class="container">
        <div class="row">
        <div class="col-md-10 order-md-1">
        <div class="row">
            <% @items.each do |item| %>
            <div class="col-md-4 mb-3">
                <div class="card mb-4 shadow-sm">
                    <%= image_tag item.feature_image if item.feature_image.present? %>
                    <div class="card-body">
                        <p class="card-text"><%= item.name %></p>
                        <p class="card-text"><%= item.description %></p><br />
                            <div class="btn-group">
                                <% if user_signed_in? %>
                                <% if current_user.id != item.user_id %>
                                <%= link_to 'view', collection_item_path(:collection_id, item), class: 'btn btn-success' %>
                                <% else %>
                                <%= link_to 'view', collection_item_path(:collection_id, item), class: 'btn btn-success' %>
                                <%= link_to 'edit', edit_collection_item_path(:collection_id, item), class: 'btn btn-success' %>
                                <%= link_to 'delete', collection_item_path(:collection_id, item), method: :delete, data: {confirm: "Do you want to delete the collection?"}, class: 'btn btn-success' %>
                                <% end %>
                                <% else %>
                                <%= link_to 'view', collection_item_path(:collection_id, item), class: 'btn btn-success' %>
                                <% end %>
                            </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
        </div>
        <div class="col-md-2 order-md-2 mb-4">
        </div>
        </div>
    </div>
</div>
