<div class="container">
<header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
        <% if user_signed_in? %>
        <% if params[:user_id].nil? %>
            <% if @collection.user_id != current_user.id %>
            <% else %>
            <span><%= link_to 'new item', new_collection_item_path, class: 'col-4 pt-1 text-muted' %></span>
            <% end %>
            <% else%>
            <span><%= link_to 'new item', admin_new_user_collection_items_path, class: 'col-4 pt-1 text-muted' %></span>
            <% end %>
        <% else %>
        <% end %>
        </div>
        <div class="col-4 text-center">
        <h2><a class="blog-header-logo text-dark" href="/items">Items</a></h2>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
        </div>
    </div>
</header>
</div>
<%= render 'item' %>